<header>
  <!-- navigation -->
  <nav class="navbar navbar-light bg-light d-flex justify-content-around">
    <div>
      <a class="navbar-brand" href="/">
        <img src="https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/6227/restaurant-list-logo.png"
          width="30" height="30" class="d-inline-block align-top" alt="我的餐廳清單">
        我的餐廳清單
      </a>
    </div>

    <div>
      <a class="mb-2" href="/restaurants/new">
        <button type="submit" class="btn btn-info text-secondary-emphasis">新增一家餐廳</button>
      </a>
    </div>

  </nav>

  <div class="banner"></div>
</header>

<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/restaurants">
        <h4 class="mb-2 ">尋找餐廳：</h4>
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
            value="{{keyword}}" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="row row-cols-sm-3">
        {{!-- {{#each restaurants as |restaurant|}} --}}
        {{#each restaurants}}

          <div class="card mb-3">
            <a href="/restaurants/{{this.id}}" class="text-secondary">
              <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
            </a>
            <div class="card-body p-3">
              <h6 class="card-title mb-1">{{this.name}}</h6>

              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i> {{this.category}}
              </div>

              <span class="badge rounded-pill bg-danger font-weight-normal">
                {{this.rating}}
                <i class="fas fa-star fa-xs"></i>
              </span>

              <a href="/restaurants/{{this.id}}" class="text-secondary">
                <button type="submit" class="btn btn-outline-secondary">介紹</button>
              </a>

              <a href="/restaurants/{{this.id}}/edit" class="text-secondary">
                <button type="submit" class="btn btn-outline-secondary">編輯</button>
              </a>
              
              {{!-- 原本的刪除功能，可以刪除正確指定的餐廳 --}}
              <form action="/restaurants/{{this.id}}?_method=DELETE" method="post" style="display: inline;">
                <button type="submit" class="btn btn-outline-secondary">刪除</button>
              </form>
              
              {{!-- 依助教要求，新增彈出視窗：在真正刪除前，再確認一次是否刪除  --}}
              {{!-- 不過利用Bootstrap，好像無法讓表單正確運作 --}}
              <!-- Button trigger modal -->
              <button type="button" class="btn btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#modalTrigger">
                刪除
              </button>
              
              <!-- Modal -->
              <div class="modal fade" id="modalTrigger" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                  <div class="modal-content">
                    <div class="modal-header">
                      <h1 class="modal-title fs-5" id="exampleModalLabel">警告</h1>
                      <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                      請問您：是否確定要刪除此餐廳？
                    </div>
                    <div class="modal-footer">
                      <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">關閉</button>
                      {{!-- 以下是直接複製正常的刪除功能，但不知為何會認錯id --}}
                      <form action="/restaurants/{{this.id}}?_method=DELETE" method="post" style="display: inline;">
                        <button type="submit" class="btn btn-outline-secondary" data-toggle="modal">刪除</button>
                      </form>

                    </div>
                  </div>
                </div>
              </div>

              
            </div>
          </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>